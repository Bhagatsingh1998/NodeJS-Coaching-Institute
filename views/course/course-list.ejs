<%- include('./../includes/header') %>
<%- include('./../includes/navigation') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <% for(var course of courses) { %>
                <% var link = (session_data.mode=="admin") ? "/admin/manage-courses/"+course._id : "/courses/"+course._id %>
                <div class="card-box" onclick="window.location.href= '<%=link%>'" >
                    <div class="row">
                        <div class="col-md-4">
                            <img class="card-img-top" src="<%=course.image_url%>" alt="Card image cap">
                        </div>
                        <div class="col-md-8">
                            <h5><%=course.course_name%></h5>
                            <div class="row">
                                <div class="col-3">
                                    <%=course.course_type%><br>
                                    <%=course.max_seats%> Seats
                                </div>
                                <div class="col-3" style="text-align: right;">
                                    <%=course.lec_hours%> Hours<br>
                                    <i class="fas fa-rupee-sign"></i> <%=course.price%>
                                </div>
                                <div class="col">
                                    <div style="text-align: right;">
                                        <% if(session_data.mode=="admin" && session_data.isLoggedIn!=true) { %>
                                            <a href="/admin/manage-courses/<%=course._id%>" class="btn btn-primary">Edit</a>
                                            <a href="" class="btn btn-danger">Delete</a>  
                                        <% } %>  
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<%- include('./../includes/footer') %>
