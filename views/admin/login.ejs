<%- include('./../includes/header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align: center;">
            <img src="public/favicon.ico" style="width:40px; height:40px"/>
            <h2>course<strong>R</strong>us.com</h2>
            <br>
            <div class="form-box">
                <h4>ADMIN LOGIN</h4>
                <br>
                <form method="POST" action="/login">
                    <div class="form-group">
                        <input type="text" name="email_id" class="form-control" placeholder="Enter Email ID">
                    </div>
                    <div class="form-group">
                        <input id="password" type="password" name="password" class="form-control" placeholder="Enter Password"><span id="passwordToggler" onclick="passwordToggler()" class="fas fa-eye form-control-icon"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <br>
                <a href="/password-reset">Forgot Password?</a>
                <br>
                <hr>
                <p>Don't have an account? <a href="/signup">Sign Up</a></p>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>

